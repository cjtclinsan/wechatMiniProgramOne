<input></input>

<!--input中的默认值-->
<input value="hoho"></input>

<!--type 限制键盘类型(英文/其他符号/数字)-->
<input type="number" maxlength="10"></input>
<!--暗文-->
<input password></input>

<!--占位提醒文字-->
<input placeholder="请输入内容" placeholder-class=""></input>

<!--绑定事件-->
<input bindinput="handleInput"
       bindfocus="handleFocus"
       bindblur="handleBlur"></input>

<!--水平滚动-->
<scroll-view class="container1" scroll-x>
  <view wx:for="{{10}}" class="item1">
    {{item}}
  </view>
</scroll-view>

<!--垂直滚动-->
<scroll-view class="container2" scroll-y>
  <view wx:for="{{10}}" class="item2">
    {{item}}
  </view>
</scroll-view>

<!--其他-->
<scroll-view class="container2" 
             scroll-y
             bindscroll="handleScroll">
  <view wx:for="{{10}}" class="item2">
    {{item}}
  </view>
</scroll-view>


